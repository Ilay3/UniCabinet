@page
@model IndexModel
@{
    ViewData["Title"] = "Your Profile";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ConfirmationResult"] != null)
{
    <div class="alert alert-info">
        @TempData["ConfirmationResult"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Your Profile</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Patronymic"></label>
                    <input asp-for="Input.Patronymic" class="form-control" />
                    <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.DateBirthday"></label>
                    <input asp-for="Input.DateBirthday" type="date" class="form-control" />
                    <span asp-validation-for="Input.DateBirthday" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
        </section>
    </div>
</div>

<p class="text-success">@Model.StatusMessage</p>

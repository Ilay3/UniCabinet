@model List<UniCabinet.Core.Models.ViewModel.DisciplineDetail.DisciplineDetailListVM>

@{
    ViewData["Title"] = "Детали дисциплины";
}

<h1 class="mb-4 text-primary">Детали дисциплины</h1>

<form method="get" id="teacherFilterForm" class="mb-4">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="teacher" class="form-label">Преподаватель:</label>
        </div>
        <div class="col-auto">
            <select id="teacher" name="teacherId" class="form-select">
                <option value="">Все преподаватели</option>
                @foreach (var teacher in ViewData["Преподаватель"] as List<UniCabinet.Core.Models.ViewModel.User.UserVM>)
                {
                    <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
        </div>
    </div>
</form>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Группа</th>
            <th>Курс</th>
            <th>Семестр</th>
            <th>Лекции</th>
            <th>Практические</th>
            <th>Экзамен</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.GroupName</td>
                <td>@detail.CourseNumber</td>
                <td>@detail.SemesterNumber</td>
                <td>@detail.LectureCount</td>
                <td>@detail.PracticalCount</td>
                <td>@detail.ExamCount</td>
            </tr>
        }
    </tbody>
</table>

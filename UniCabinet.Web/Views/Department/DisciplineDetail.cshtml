@model List<UniCabinet.Core.Models.ViewModel.DisciplineDetail.DisciplineDetailListVM>

@{
    ViewData["Title"] = "Детали дисциплины";
}

<h1>Детали дисциплины</h1>

<form method="get" id="teacherFilterForm">
    <div class="form-group">
        <label for="teacher">Выберите преподавателя</label>
        <select id="teacher" name="teacherId" class="form-control">
            <option value="">Все преподаватели</option>
            @foreach (var teacher in ViewData["Teachers"] as List<UniCabinet.Core.Models.ViewModel.User.UserVM>)
            {
                <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Фильтровать</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Группа</th>
            <th>Курс</th>
            <th>Семестр</th>
            <th>Количество лекций</th>
            <th>Количество практических</th>
            <th>Экзамен</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.GroupName</td>
                <td>@detail.CourseNumber</td>
                <td>@detail.SemesterNumber</td>
                <td>@detail.LectureCount</td>
                <td>@detail.PracticalCount</td>
                <td>@detail.ExamCount</td>
            </tr>
        }
    </tbody>
</table>

@model PaginationModel

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action(Model.Action, Model.Controller, new { pageNumber = i, role = Model.RouteValues.Role, pageSize = Model.RouteValues.PageSize, query = Model.RouteValues.Query })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

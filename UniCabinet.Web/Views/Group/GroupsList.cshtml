@model IEnumerable<UniCabinet.Core.Models.ViewModel.Group.GroupListVM>

<h2>Список групп</h2>

<button class="btn btn-primary" onclick="openModal('/Group/GroupAddModal', 'addGroupModal')">Добавить группу</button>

<table class="table">
    <thead>
        <tr>
            <th>Название группы</th>
            <th>Тип группы</th>
            <th>Курс</th>
            <th>Семестр</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@group.TypeGroup</td>
                <td>@group.CourseId</td>
                <td>@group.SemesterId</td>
                <td>
                    <button class="btn btn-info" onclick="openModal('/Group/GroupEditModal', 'editGroupModal', @group.Id)">Редактировать</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="modalContainer"></div>

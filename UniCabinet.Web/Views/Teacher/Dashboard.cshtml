@model List<UniCabinet.Core.Models.ViewModel.Discipline.DisciplineListVM>

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<h2>Список дисциплин</h2>

<div class="form-group">
    <label for="yearFilter">Фильтр по году:</label>
    <select id="yearFilter" class="form-control" onchange="filterByYear()">
        <option value="">Все годы</option>
        @for (var year = DateTime.Now.Year; year >= DateTime.Now.Year - 10; year--)
        {
            <option value="@year">@year</option>
        }
    </select>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Название дисциплины</th>
            <th>Описание</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discipline in Model)
        {
            <tr>
                <td>@discipline.Name</td>
                <td>@discipline.Description</td>
                <td>
                    <button class="btn btn-primary"
                            onclick="loadGroups(@discipline.Id)">
                        Показать группы
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="groupsContainer"></div>

@section Scripts {
    <script>
        var currentDisciplineId = null;

        function loadGroups(disciplineId) {
            currentDisciplineId = disciplineId;
            var selectedYear = $('#yearFilter').val();
            $.ajax({
                url: '/Teacher/GetGroupsForDiscipline',
                data: {
                    disciplineId: disciplineId,
                    filetDate: selectedYear ? selectedYear + '-01-01' : null
                },
                success: function (html) {
                    $('#groupsContainer').html(html);
                },
                error: function (xhr, status, error) {
                    console.error('Ошибка при загрузке групп:', error);
                }
            });
        }

        function filterByYear() {
            if (currentDisciplineId !== null) {
                loadGroups(currentDisciplineId);
            } else {
                $('#groupsContainer').html('<p>Выберите дисциплину, чтобы увидеть группы.</p>');
            }
        }
    </script>
}

@model UniCabinet.Domain.DTO.PracticalDTO

<div class="modal-header">
    <h5 class="modal-title">Добавить Практическую Работу</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form id="createPracticalForm" asp-action="Create" method="post">
        <input type="hidden" asp-for="DisciplineDetailId" />

        <div class="form-group">
            <label asp-for="PracticalNumber">Номер Практической Работы</label>
            <input asp-for="PracticalNumber" class="form-control" />
            <span asp-validation-for="PracticalNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Дата Проведения</label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
    <button type="submit" class="btn btn-primary" form="createPracticalForm">Добавить</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#createPracticalForm').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "Practical")',
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            // Обработка успешного добавления через глобальные обработчики
                        } else {
                            $('#practicalModal .modal-body').html(response); // Отображение ошибок
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Произошла ошибка при добавлении практической работы.');
                    }
                });
            });
        });
    </script>
}
